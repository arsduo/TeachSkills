%html
  %head
    %title CloseGuru.com
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = fb_login
  %body
    %header#header
      CloseGuru.com - Deine lokalen Skill-Gurus
    %nav#nav
      %ul.hmenu
        = render 'devise/menu/registration_items'
        = render 'devise/menu/login_items'
